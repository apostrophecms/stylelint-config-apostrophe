{
  "name": "stylelint-config-apostrophe",
  "version": "1.1.0",
  "description": "stylelint configuration for apostrophe and related core modules",
  "main": "index.js",
  "scripts": {
    "check": "node ./lib/checkUpdates",
    "compare": "node ./lib/index",
    "test": "eslint . && npx mocha && npm run stylelint",
    "postinstall": "npm run check",
    "stylelint": "npx stylelint 'test/*.scss' --custom-syntax postcss-scss --config stylelintrc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apostrophecms/stylelint-config-apostrophe.git"
  },
  "author": "Apostrophe Technologies, Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/apostrophecms/stylelint-config-apostrophe/issues"
  },
  "homepage": "https://github.com/apostrophecms/stylelint-config-apostrophe#readme",
  "dependencies": {
    "stylelint-config-standard": "^28.0.0",
    "stylelint-declaration-strict-value": "^1.9.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "stylelint-selector-bem-pattern": "^2.1.1"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-apostrophe": "^3.4.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "mocha": "^7.2.0",
    "postcss-scss": "^4.0.4"
  }
}
